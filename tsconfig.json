{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions":true,
    "noEmit": true,
    "emitDecoratorMetadata": true,  // Esta opci√≥n es obligatoria para que funcione el metadata de los decoradores
    "experimentalDecorators": true,  // Habilitar decoradores en TypeScript
    "skipLibCheck": true  

  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
